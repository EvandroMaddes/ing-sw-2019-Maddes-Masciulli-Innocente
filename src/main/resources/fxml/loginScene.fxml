<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="anchorPanel" prefHeight="621.0" prefWidth="747.0"
            style="-fx-background-image: url('backGround.png');" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.LoginController">
    <children>
        <VBox alignment="BOTTOM_CENTER" layoutY="337.0" prefHeight="272.0" prefWidth="747.0" spacing="20.0">
            <children>
                <VBox prefHeight="100.0" prefWidth="727.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Select your USERNAME:">
                            <font>
                                <Font name="Arial Black" size="12.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="username" onAction="#usernameType" prefHeight="19.0" prefWidth="727.0"
                                   promptText="username"/>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="700.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Select RMI or SOCKET:">
                            <font>
                                <Font name="Arial Black" size="12.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="connection" onAction="#connectionType" prefHeight="25.0" prefWidth="747.0"
                                   promptText="connection"/>
                    </children>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="727.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Select server IP address:"
                              textAlignment="CENTER">
                            <font>
                                <Font name="Arial Black" size="12.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="ipAddress" onAction="#ipType" promptText="IP addres"/>
                    </children>
                </VBox>
                <Button fx:id="enterButton" mnemonicParsing="false" onAction="#enterClick" prefHeight="0.0"
                        prefWidth="90.0" text="ENTER">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <font>
                        <Font name="Arial Black" size="12.0"/>
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets left="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
