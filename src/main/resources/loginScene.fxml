   <children>
      <VBox layoutY="65.0" prefHeight="400.0" prefWidth="602.0" spacing="20.0">
         <children>
            <Text fill="#fc7a00" strokeType="OUTSIDE" strokeWidth="0.0" text="ADRENALINE" textAlignment="CENTER" wrappingWidth="601.0078125">
               <font>
                  <Font name="Berlin Sans FB" size="64.0" />
               </font>
            </Text>
            <VBox prefHeight="158.0" prefWidth="602.0" spacing="40.0">
